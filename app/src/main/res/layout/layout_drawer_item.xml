<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_padding">
    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="@dimen/drawer_item_icon_size"
        android:layout_height="@dimen/drawer_item_icon_size"
        android:layout_marginRight="@dimen/text_padding"
        android:scaleType="fitXY"
        android:src="@drawable/add_schedule_button_icon_checked"/>

    <TextView
        android:id="@+id/drawer_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/text_padding"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/drawer_item_icon" />
</RelativeLayout>